<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    android:id="@+id/cvMascota"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/activity_vertical_margin"

    cardView:cardCornerRadius="@dimen/corner_radius_cardview"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:id="@+id/imgFoto"
            android:src="@drawable/contacts_52"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRai"
                android:textSize="@dimen/nombre_mascota"
                android:text="@string/raiting_mascota"
                android:textStyle="bold"
                android:layout_gravity="bottom" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:id="@+id/imgLike"
                android:src="@drawable/hearts_52"/>


        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>
